{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build debug",
            "type": "shell",
            "command": "make all MAIN=LCD",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "options": {
                "console": "integratedTerminal" 
            },
            "label": "Flash",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f",
                "interface/stlink.cfg",
                "-f",
                "target/stm32f1x.cfg",
                "-c",
                "\"program ./build/LCD.elf verify reset\""
            ],
            "problemMatcher": []
        },
        {
            "label": "Cleanup",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": []
        }
    ]
}